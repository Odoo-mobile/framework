<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.odoo"
    android:versionCode="2"
    android:versionName="2.0alpha" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:name="com.odoo.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:logo="@drawable/ic_odoo_o"
        android:theme="@style/AppTheme" >

        <!-- Android Account Authentication Service -->
        <service android:name="com.odoo.auth.OdooAuthenticateService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" >
            </meta-data>
        </service>

        <activity
            android:name="com.odoo.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.odoo.BaseSettings" >
            <intent-filter>
                <action android:name="com.odoo.ACTION_ACCOUNT_BASE_CONFIG" />

                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
        <activity android:name="com.odoo.GeneralSettings" >
            <intent-filter>
                <action android:name="com.odoo.ACTION_ACCOUNT_GENERAL_CONFIG" />

                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
        <activity android:name="com.odoo.base.about.About" >
            <intent-filter>
                <action android:name="com.odoo.ACTION_ABOUT" />
            </intent-filter>
        </activity>

        <!-- Base Providers (Note: update authority as per your app package) -->
        <provider
            android:name="com.odoo.base.ir.providers.model.ModelProvider"
            android:authorities="com.odoo.base.ir.providers.model"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.odoo.base.res.providers.users.UsersProvider"
            android:authorities="com.odoo.base.res.providers.users"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.odoo.base.ir.providers.attachments.AttachmentProvider"
            android:authorities="com.odoo.base.ir.providers.attachments"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.odoo.base.res.providers.country.CountryProvider"
            android:authorities="com.odoo.base.res.providers.country"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.odoo.base.res.providers.company.CompanyProvider"
            android:authorities="com.odoo.base.res.providers.company"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.odoo.addons.partners.providers.country_state.CountryStateProvider"
            android:authorities="com.odoo.addons.partners.providers.country_state"
            android:exported="false"
            android:multiprocess="true" />

        <!-- /Base Providers -->
        <!-- Contact service -->
        <!--
        <service
            android:name="com.odoo.base.res.services.ContactSyncService"
            android:exported="true"
            android:process=":contacts" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_contacts" />
            <meta-data
                android:name="android.provider.CONTACTS_STRUCTURE"
                android:resource="@xml/contacts" />
        </service>
        -->


        <!-- ResPartner Provider -->
        <provider
            android:name="com.odoo.base.res.providers.partners.PartnersProvider"
            android:authorities="com.odoo.base.res.providers.partners"
            android:enabled="true"
            android:exported="false"
            android:label="Partners"
            android:syncable="true" />
        <provider
            android:name="com.odoo.addons.partners.providers.partners_category.PartnerCategoryProvider"
            android:authorities="com.odoo.addons.partners.providers.partners_category"
            android:exported="false"
            android:multiprocess="true" />
        <!-- ResPartner Service -->
        <service
            android:name="com.odoo.addons.partners.sevices.PartnersService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_partners" />
        </service>
    </application>

</manifest>