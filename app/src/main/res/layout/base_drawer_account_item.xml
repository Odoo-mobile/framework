<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="@dimen/base_default_16dp">

    <odoo.controls.BezelImageView
        android:id="@+id/profile_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/base_default_8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/base_avatar"
        app:maskDrawable="@drawable/base_circle_mask" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:fontFamily="@string/base_font_light"
            android:singleLine="true"
            android:textColor="@color/base_body_text_1"
            android:textSize="@dimen/base_text_size_medium" />

        <TextView
            android:id="@+id/profile_url_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:fontFamily="@string/base_font_light"
            android:singleLine="true"
            android:textColor="@color/base_body_text_2"
            android:textSize="@dimen/base_text_size_medium" />
    </LinearLayout>
</LinearLayout>