<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@string/font_normal"
                android:maxLines="1"
                android:text="Project Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/body_text_1" />

            <TextView
                android:id="@+id/txv_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_normal"
                android:text="Task Name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#777777"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.odoo.addons.timesheet.utils.OChronometer
                android:id="@+id/chn_Ochronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <!--<TextView-->
            <!--android:id="@+id/txv_spent_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="0.0" />-->

            <ImageView
                android:id="@+id/img_start_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_play"
                android:tint="@color/abc_background_cache_hint_selector_material_dark" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>