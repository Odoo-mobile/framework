            <!--android:name="com.odoo.addons.timesheet.providers.TimesheetSyncProvider"-->
            <!--android:authorities="com.odoo.addons.timesheet.providers.CmmsTimesheet"-->
            <!--android:label="Timesheet"-->
            <!--android:multiprocess="true" />-->

        <!--<service-->
            <!--android:name="com.odoo.addons.timesheet.services.TimesheetSyncService"-->
            <!--android:exported="true"-->
            <!--android:process=":sync_timesheet">-->
